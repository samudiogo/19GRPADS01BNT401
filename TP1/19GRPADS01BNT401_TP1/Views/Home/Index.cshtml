@model IEnumerable<_19GRPADS01BNT401_TP1.Models.FriendViewModel>

<h2>List of Friends (with e-mails)</h2>
<h4><a asp-action="ListB">Show ListB</a></h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>@Html.DisplayNameFor(model => model.Selected)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Selected)
            </td>
            <td>
                <form asp-action="SelectListA">
                    <input type="hidden" value="@item.Id" name="id" />
                    <input type="submit" value="Select" />
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
